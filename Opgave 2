# Sørg for, at kolonnerne i Q4_data har de samme navne som i træningsdataene.
Q4.2 <- as.data.frame(Q4.2)
colnames(Q4.2) <- colnames(Forv1.periode[, -c(1:2)])

# Forudsigelse for Q4 ved hjælp af PCR-modellen
Q4_prediction <- predict(pcr.fit, newdata = Q4.2, ncomp = 1)

# Udskriv resultatet
print(Q4_prediction)

